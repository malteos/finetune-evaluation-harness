# .coveragerc to control coverage.py
[run]
omit =
    */huggingface/modules/*
    */tasks/classification.py
    */tasks/ner.py
    */tasks/qa.py
    */templates/*
    */tasks/*
    */process_args.py
    */main.py

[coverage:paths]
source =
    finetune-evaluation-harness/src
    finetune-evaluation-harness/src/finetunetune_eval/hf_scripts
    finetune-evaluation-harness/src/finetunetune_eval/tasks
    finetune-evaluation-harness/tests
[paths]
source =
    finetune-evaluation-harness/src
    finetune-evaluation-harness/src/finetunetune_eval/hf_scripts
    finetune-evaluation-harness/src/finetunetune_eval/tasks
    finetune-evaluation-harness/src/finetunetune_eval/templates
    finetune-evaluation-harness/tests
    finetune-evaluation-harness/tests/custom_model